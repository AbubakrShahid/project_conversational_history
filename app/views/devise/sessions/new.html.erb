<div class="flex items-center justify-center bg-gray-100 p-8">
  <div class="w-full max-w-md bg-white p-8 rounded-2xl shadow-xl border border-gray-200">
    <h2 class="text-3xl font-bold text-center mb-6">Sign in</h2>

    <%= form_for(resource, as: resource_name, url: session_path(resource_name), class: "space-y-5") do |f| %>
    <div class="mb-4">
      <%= f.label :email, class: "block text-sm font-medium text-gray-700" %>
      <%= f.email_field :email, autofocus: true, autocomplete: "email",
            class: "w-full px-4 py-2 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-[#343088] focus:border-[#343088] placeholder-gray-400" %>
    </div>

    <div class="mb-4">
      <%= f.label :password, class: "block text-sm font-medium text-gray-700" %>
      <%= f.password_field :password, autocomplete: "current-password",
            class: "w-full px-4 py-2 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-[#343088] focus:border-[#343088] placeholder-gray-400" %>
    </div>

    <% if devise_mapping.rememberable? %>
    <div class="flex items-center mb-4">
      <%= f.check_box :remember_me, class: "h-4 w-4 text-[#343088] border-gray-300 rounded focus:ring-[#343088]" %>
      <%= f.label :remember_me, class: "ml-2 block text-sm text-gray-700" %>
    </div>
    <% end %>

    <div>
      <%= f.submit "Log in", class: "w-full bg-[#343088] text-white py-2 rounded-lg font-semibold hover:bg-[#2b2766] transition duration-200 shadow-sm" %>
    </div>
    <% end %>

    <div class="text-center mt-6 text-sm text-gray-600">
      <%= render "devise/shared/links" %>
    </div>
  </div>
</div>