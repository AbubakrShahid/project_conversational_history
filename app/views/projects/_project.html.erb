<div class="bg-white shadow-md rounded-lg p-6 mb-2 border border-gray-200">
  <div class="flex justify-between items-center mb-4">
    <h1 class="text-2xl font-bold"><%= project.title %></h1>
    <%= link_to "View Project", project,
        class: "inline-block bg-[#343088] text-white px-4 py-2 rounded-lg hover:bg-[#2b2766] transition duration-200" %>
  </div>
  <div class="mb-4">
    <h2 class="text-sm font-semibold text-gray-600 uppercase tracking-wide mb-1">Description</h2>
    <p class="text-gray-800 bg-gray-100 rounded-md px-4 py-3 leading-relaxed">
      <%= project.description.presence || "No description provided." %>
    </p>
  </div>
  <div>
    <h2 class="text-sm font-semibold text-gray-600 uppercase tracking-wide mb-1">Status</h2>
    <span class="inline-block bg-[#343088] text-white text-sm font-medium px-3 py-1.5 rounded-full shadow-sm">
      <%= project.status.humanize %>
    </span>
  </div>
</div>